<h1>Orders for <%= Time.now.strftime('%A, %b %d') %></h1>

<div class="row">
  <div class="col-lg-12">
    <% @orders.each_slice(2) do |batch_of_two_orders| %>
        <div class="row">
          <% batch_of_two_orders.each do |order| %>
              <div class="col-lg-4">
                <div class="well">
                  <h3> Order for <%= order.name %>: </h3>
                  <%= render partial: 'items/items_list', locals: {items: order.items, show_availability: AvailabilityTypeHelper::NONE} %>
                  Total cost of this order: <%= number_with_delimiter(order.total_price) %>
                </div>
              </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <%= button_to 'Delete all orders and start next day', destroy_all_orders_path, method: :delete, data: {confirm: 'Are you sure you want to delete ALL the orders? Only do this if you\'ve already printed the list!!'}, class: 'btn btn-danger' %>
  </div>
</div>