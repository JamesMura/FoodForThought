<h1>Orders for <%= Time.now.strftime('%A, %b %d') %></h1>

<div class="row">


  <div class="col-lg-12">
    <table class="table table-striped">
      <tr>
        <th>Name:</th>
        <th>Order:</th>
        <th>Price:</th>
      </tr>
      <% @orders.each do |order| %>
          <tr>
            <td class="text-left"><%= order.user.username %></td>
            <td class="text-left"><%= bold_pluses(order.items_string) %></td>
            <td class="text-left"><%= number_with_delimiter(order.total_price) %></td>
          </tr>
      <% end %>
    </table>


  </div>
</div>

<div class="row">


  <div class="col-lg-4">
    <div class="alert alert-info">
      Total number of orders for today: <%= @orders.size %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <div class="alert alert-info">
      Total price of all orders for today: <%= number_with_delimiter(@total_price_of_orders) unless @total_price_of_orders.nil? %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <%= button_to 'Delete all orders and start next day', destroy_all_orders_path, method: :delete, data: {confirm: 'Are you sure you want to delete ALL the orders? Only do this if you\'ve already printed the list!!'}, class: 'btn btn-danger' %>
  </div>
</div>