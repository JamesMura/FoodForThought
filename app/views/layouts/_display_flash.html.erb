<% flash.each do |name, msg| -%>
    <% if msg.class == Array %>
        <% msg.each do |message| %>
            <%= content_tag :div, message, class: display_class_for(name) %>
        <% end -%>
    <% else -%>
        <%= content_tag :div, msg, class: display_class_for(name) %>
    <% end -%>
<% end -%>
