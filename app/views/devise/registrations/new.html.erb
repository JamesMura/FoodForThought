<h2>Sign up</h2>

<div class="col-lg-5">
  <div class="row">
    <%= render :partial => 'layouts/display_flash', :locals => {:flash => flash} %>
    <%= other_error_messages! %>
  </div>

  <div class="row">
    <div class="well">

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

          <fieldset>
            <legend>Register</legend>

            <div class="form-group">
              <%= f.label :username, class: 'col-lg-2 control-label' %>
              <div class="col-lg-10" style="margin-bottom: 15px">
                <%= f.text_field :username, :autofocus => true, :class => 'form-control', placeholder: 'Username Here' %></div>
            </div>

            <div class="form-group">
              <%= f.label :email, class: 'col-lg-2 control-label' %>
              <div class="col-lg-10" style="margin-bottom: 15px">
                <%= f.email_field :email, :class => 'form-control', placeholder: 'E-Mail Address Here' %></div>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'col-lg-2 control-label' %>
              <div class="col-lg-10" style="margin-bottom: 15px">
                <%= f.password_field :password, :class => 'form-control', placeholder: 'Password Here' %></div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: 'col-lg-2 control-label' %>
              <div class="col-lg-10" style="margin-bottom: 15px">
                <%= f.password_field :password_confirmation, :class => 'form-control', placeholder: 'Password Here (Again)' %></div>
            </div>

          </fieldset>
          <div><%= f.submit "Sign up" %></div>
      <% end %>

    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
