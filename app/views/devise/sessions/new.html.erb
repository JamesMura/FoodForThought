<div class="col-lg-5">
  <div class="row">
    <%= render :partial => 'layouts/display_flash', :locals => {:flash => flash} %>
  </div>

  <div class="row">
    <div class="well">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <fieldset>
            <legend>Sign in</legend>

            <div class="form-group">
              <%= f.label :email, class: 'col-lg-3 control-label' %>
              <div class="col-lg-9" style="margin-bottom: 15px">
                <%= f.email_field :email, :class => 'form-control', placeholder: 'E-Mail Address Here' %></div>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'col-lg-3 control-label' %>
              <div class="col-lg-9" style="margin-bottom: 15px">
                <%= f.password_field :password, :class => 'form-control', placeholder: 'Password Here' %></div>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <div class="col-lg-9" style="margin-bottom: 15px">
                    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                  </div>
                </div>
            <% end -%>
            <div class="col-lg-9" style="margin-bottom: 15px">
              <div><%= f.submit "Sign in" %></div>
            </div>
          </fieldset>
      <% end %>
    </div>
  </div>


  <div class="row">
    <%= render "devise/shared/links" %>
  </div>
</div>