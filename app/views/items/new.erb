<div class="col-lg-4">
  <div class="well">
    <%= form_for :item, url: items_path, class: 'form-horizontal' do |f| %>
        <legend>New Item for the menu</legend>
        <div class="form-group">
          <%= f.label :name, class: 'col-lg-3 control-label' %>
          <%= f.text_field :name, class: 'input-sm', placeholder: 'Name of Item' %>
        </div>

        <div class="form-group">
          <%= f.label :price, class: 'col-lg-3 control-label' %>
          <%= f.text_field :price, class: 'input-sm', placeholder: 'Price of Item' %>
        </div>

        <%= f.submit 'Create Item', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>